<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagendefondo">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622"
        app:srcCompat="@drawable/fondo_txt_login" />

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="261dp"
        android:layout_height="79dp"
        android:layout_marginTop="80dp"

        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="86dp"
        android:layout_height="82dp"
        android:layout_marginTop="48dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono" />

    <EditText
        android:id="@+id/LoginEmail"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:hint="Introduce tu email"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginText" />

    <EditText
        android:id="@+id/LoginPassword"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:hint="Introduce tu contraseÃ±a"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginEmail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SendLoginButton"
        android:layout_width="177dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SendToRegiterButton"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/buttons"
        android:text="No estoy registrado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>